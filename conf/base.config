/*
 * ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
 * Configuration file for setting up process-specific resource requirements.
 * ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
 * This ensures optimal resource allocation for each process, improving efficiency.
 * ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
 */

process {
    // Process-specific resource requirements
    // NOTE - Please try and re-use the labels below as much as possible.
    //        These labels are used and recognised by default in DSL2 files hosted on nf-core/modules.
    //        If possible, it would be nice to keep the same label naming convention when
    //        adding in your local modules too.
    // TODO nf-core: Customise requirements for specific processes.
    // See https://www.nextflow.io/docs/latest/config.html#config-process-selectors

    withLabel:process_discovery {
        cpus   = { check_max( 1,         'cpus'    ) }
        memory = { check_max( 100.MB,    'memory'  ) }
        time   = { check_max( 1.h,       'time'    ) }
        maxForks   = 32 //Number of parallel jobs to run. Should be total assigned cores % cores per job
    }
    withLabel:process_resample {
        cpus   = { check_max( 2, 'cpus'    ) }
        memory = { check_max( 8.GB, 'memory'  ) }
        time   = { check_max( 12.h, 'time'    ) }
    }
    withLabel:process_boot {
        cpus   = { check_max( 2, 'cpus'    ) }
        memory = { check_max( 2.GB, 'memory'  ) }
        time   = { check_max( 72.h, 'time'    ) }
        maxForks   = 16 //Number of parallel jobs to run. Should be total assigned cores % cores per job
    }
    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }
 }
